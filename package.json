{
  "name": "api_base",
  "version": "1.0.0",
  "description": "API Base with typescript, koa, lint, test, cz, husky and others",
  "private": true,
  "main": "src/server/index.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "nodemon",
    "dev:js": "tsc-watch --onSuccess \"node dist/src/server/index.js\" ",
    "build": "tsc --build --clean && tsc --build",
    "start": "node --experimental-specifier-resolution=node dist/src/server/index.js",
    "postinstall": "npm run build",
    "test": "jest --runInBand --detectOpenHandles",
    "test:ci": "CI=true jest --silent --runInBand --detectOpenHandles",
    "coverage": "jest --coverage --runInBand --detectOpenHandles",
    "coverage:ci": "CI=true jest --coverage --silent --runInBand --detectOpenHandles",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint . --ext .ts --fix",
    "cz": "cz . ",
    "prepare": "husky install"
  },
  "author": "Camila Eyzaguirre",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.1.1",
    "koa2-cors": "^2.0.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.4",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "babel-jest": "^27.4.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.5.2"
  },
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
